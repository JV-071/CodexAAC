# Directory config.lua
SERVER_CONFIG_PATH=/path/to/your/server/config.lua

# Database
DATABASE_URL="mysql://user:password@localhost:3306/codexaac"

# Server
PORT=8080
ENV=development

# Security
JWT_SECRET="your-secret-key-here-minimum-32-characters"

# CORS (comma-separated list of allowed origins)
# Leave empty for development (localhost:3000 will be allowed)
CORS_ALLOWED_ORIGINS="http://localhost:3000"


# Social Media Links
# Leave empty to hide the social media link from the frontend
SOCIAL_FACEBOOK_URL="https://facebook.com/yourpage"
SOCIAL_INSTAGRAM_URL="https://instagram.com/yourpage"
SOCIAL_WHATSAPP_URL="https://wa.me/5511999999999"
SOCIAL_DISCORD_URL="https://discord.gg/yourserver"

# Grace period in days before permanent account deletion (default: 30)
ACCOUNT_DELETION_GRACE_PERIOD_DAYS=30

# Admin secret value - used to identify admin accounts (secret field in accounts table must match this)
# Default: "5" if not set
ADMIN_SECRET=5